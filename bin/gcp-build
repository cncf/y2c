#!/usr/bin/env bash

set -e

BUCKET=y2c-v1.appspot.com
FOLDER=$(date +%s)
PUBLIC_URL=https://storage.googleapis.com/$BUCKET/$FOLDER

cp .env.production .env
PUBLIC_URL=$PUBLIC_URL yarn run client:build
cp -r client/build ./build
gsutil -h 'Cache-Control:public,max-age=31536000' cp -a public-read -r -Z ./build/static gs://$BUCKET/$FOLDER/static
rm -rf client
